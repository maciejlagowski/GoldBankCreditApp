<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- SQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Database Connection Settings -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/goldBank?useTimezone=true&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">maciek</property>
        <property name="show_sql">true</property>

        <!-- Specifying Session Context -->
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

        <!-- Mapping With Model Class Containing Annotations -->
        <mapping class="io.github.maciejlagowski.prz.project.model.database.entity.Account" />
        <mapping class="io.github.maciejlagowski.prz.project.model.database.entity.Client" />
        <mapping class="io.github.maciejlagowski.prz.project.model.database.entity.Credit" />
        <mapping class="io.github.maciejlagowski.prz.project.model.database.entity.CreditApplication" />
        <mapping class="io.github.maciejlagowski.prz.project.model.database.entity.Income" />
    </session-factory>
</hibernate-configuration>